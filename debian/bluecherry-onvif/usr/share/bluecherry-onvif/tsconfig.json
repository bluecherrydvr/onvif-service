{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,  // Allow JS files
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["jest", "node"],             
    "outDir": "./built"
  },
  "include": [
    "./src/**/*",
    "./src/**/*.test.ts",  // Ensure that test files are included properly
    "./src/tests/**/*.ts"  // Added support for tests in the 'tests' folder
  ],
  "exclude": ["node_modules"]
}

